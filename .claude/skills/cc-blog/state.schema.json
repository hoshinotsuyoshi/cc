{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cc-blog state",
  "description": "Tracks last checked articles for cc-blog skill",
  "type": "object",
  "properties": {
    "blogs": {
      "type": "object",
      "description": "Key is blog name from blogs.yaml",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "last_url": {
            "type": "string",
            "format": "uri",
            "description": "URL of last seen article"
          },
          "last_title": {
            "type": "string",
            "description": "Title of last seen article"
          },
          "last_published": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "Published date (YYYY-MM-DD)"
          },
          "last_checked": {
            "type": "integer",
            "minimum": 0,
            "description": "Unix epoch seconds (UTC)"
          }
        },
        "required": ["last_checked", "last_url"],
        "unevaluatedProperties": false
      }
    }
  },
  "required": ["blogs"],
  "unevaluatedProperties": false
}
